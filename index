<script>
const tg = window.Telegram.WebApp;
tg.ready();
tg.expand();

const user = tg.initDataUnsafe.user || {};
document.getElementById('photo').src = document.getElementById('p_photo').src = user.photo_url || "https://i.imgur.com/8Km9tLL.png";
document.getElementById('name').innerText = document.getElementById('p_name').innerText = user.first_name || "User";
document.getElementById('uid').innerText = user.id || "N/A";
document.getElementById('refLink').innerText = "https://t.me/CashDhoroBot?start=" + (user.id || "join");

let data = JSON.parse(localStorage.getItem("pro_app_data_v2")) || { bal: 0, ads: 0, ref: 0, lastBonus: "" };
let selectedMth = "Bkash";

function update() {
  document.getElementById('balance').innerText = document.getElementById('wb').innerText = data.bal;
  document.getElementById('total_inc').innerText = data.bal;
  document.getElementById('total_ads').innerText = document.getElementById('today_ads').innerText = data.ads;
  document.getElementById('total_ref').innerText = data.ref;
  localStorage.setItem("pro_app_data_v2", JSON.stringify(data));
}
update();

function nav(id) {
  document.querySelectorAll(".container > div").forEach(d => d.classList.add("hide"));
  document.getElementById(id).classList.remove("hide");
  document.querySelectorAll(".nav button").forEach(b => b.classList.remove("active"));
  document.getElementById('n-' + id).classList.add("active");
}

function selectMethod(el, m) {
    document.querySelectorAll('.method-card').forEach(c => c.classList.remove('active'));
    el.classList.add('active');
    selectedMth = m;
}

function watchAd() {
  if (typeof window.showGiga === 'function') {
    window.showGiga().then(() => {
        data.bal += 10; data.ads += 1; update();
        alert("ржЕржнрж┐ржиржирзНржжржи! рззрзж ржЯрж╛ржХрж╛ ржпрзЛржЧ рж╣рзЯрзЗржЫрзЗред");
    }).catch(() => alert("ржЕрзНржпрж╛ржб рж▓рзЛржб рж╣рждрзЗ рж╕ржорж╕рзНржпрж╛ рж╣рзЯрзЗржЫрзЗред"));
  } else { alert("Ad Script Loading..."); }
}

function claimBonus() {
    let today = new Date().toDateString();
    if(data.lastBonus === today) { alert("ржЖржЬржХрзЗрж░ ржмрзЛржирж╛рж╕ ржирзЗржУрзЯрж╛ рж╣рзЯрзЗ ржЧрзЗржЫрзЗ!"); }
    else { data.bal += 10; data.lastBonus = today; update(); alert("рззрзжрз│ ржмрзЛржирж╛рж╕ ржкрзЗрж▓рзЗржи! ЁЯОБ"); }
}

function startSpin() {
    if (typeof window.showGiga === 'function') {
        window.showGiga().then(() => {
            let win = [0, 5, 10, 20, 50][Math.floor(Math.random()*5)];
            data.bal += win; update();
            alert("ржЖржкржирж┐ рж╕рзНржкрж┐ржи ржХрж░рзЗ " + win + "рз│ ржЬрж┐рждрзЗржЫрзЗржи! ЁЯОЙ");
        });
    }
}

function copyRef() {
    navigator.clipboard.writeText(document.getElementById('refLink').innerText);
    alert("рж░рзЗржлрж╛рж░ рж▓рж┐ржЩрзНржХ ржХржкрж┐ рж╣рзЯрзЗржЫрзЗ! рзирзжрз│ ржмрзЛржирж╛рж╕ ржкрзЗрждрзЗ рж╢рзЗрзЯрж╛рж░ ржХрж░рзБржиред");
}

function reqW() {
    let a = document.getElementById('amt').value;
    let n = document.getElementById('num').value;
    if(a >= 500 && a <= data.bal && n.length > 10) {
        data.bal -= a; update();
        alert("ржЖржкржирж╛рж░ " + a + "рз│ ржЙржЗржержбрзНрж░ рж░рж┐ржХрзЛрзЯрзЗрж╕рзНржЯ (" + selectedMth + ") рж╕ржлрж▓ рж╣рзЯрзЗржЫрзЗред");
    } else { alert("рж╕ржарж┐ржХ рждржерзНржп ржжрж┐ржи (ржорж┐ржирж┐ржорж╛ржо рзлрзжрзжрз│)ред"); }
}

function openDev() { window.open("https://t.me/JUST_GOPAL", "_blank"); }
</script>

